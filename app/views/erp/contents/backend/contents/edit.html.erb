<% content_for :title do %>
    <%= @content.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_contents.backend_contents_path %>">
    <i class="fa fa-rss-square"></i> <%= t('.contents') %>
    </a> / <%= @content.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_contents.new_backend_content_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @content.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', content: @content %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>